<% content_for :head do %>
  <title><%= @item.title %> - monolist</title>
  <meta name="description" content="この商品がほしい人の数：<%= @wanted_users.count %>, この商品を持っている人の数：<%= @haved_users.count %>">
<% end %>
<div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <div class="image">
        <div class="img-wrap">
          <% #TODO 商品イメージ %>
          <% if @item.medium_image.nil? %>
            <%= image_tag("no-image.png", alt: @item.title) %>
          <% else %>
            <%= image_tag(@item.large_image, alt: @item.title) %>
          <% end %>
        </div>
      </div>
      <div class="title">
        <% #TODO 商品タイトル %>
        <%= @item.title %>
      </div>
      <%= render 'action' , item: @item %>
    </div>
    <div class="item-single-side">
      <div class="side-box">
        <h4 class="side-box-title">Haveしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Haveしたユーザー一覧 %>
          <% @haved_users.each do |user| %>
            <%= link_to gravatar_for(user, :size => 24), user %>
          <% end %>
        </div>
      </div>
      <div class="side-box">
        <h4 class="side-box-title">Wantしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Wantしたユーザー一覧 %>
          <% @wanted_users.each do |user| %>
            <%= link_to gravatar_for(user, :size => 24), user %>
          <% end %>
        </div>
      </div>
      <div class="text-center">
        <% #TODO 正しいリンク先に %>
        <%= link_to(image_tag("amazon-button.png",{alt: "Amazon詳細ページへ"}),
                                                  "#{@item.detail_page_url}",
                                                  :target=>["_blank"] ) %>
      </div>
    </div>
  </div>
</div>
